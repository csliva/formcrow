<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body class="app">
    <header>
      <% include partials/header %>
    </header>

    <main>
      <div class="dashboard">

        <div class="dashboard__action">
          <a href="/dashboard/create">Create a new form â†’</a>
        </div>

        <ul class="dashboard__submissions">
          <% queries.forEach(function(entry) { %>
            <li style="border-left: 5px solid <%= entry.color %>">
              
              <a class="submission__link" href="/dashboard/<%= entry._id %>"><span class="submission"><%= entry.query %></span><span class="count"><%= entry.count %></span></a>
            </li>
          <% }); %>
        </ul>
      </div>
    </main>

    <footer>
      <% include partials/footer %>
    </footer>

  </body>
</html>
